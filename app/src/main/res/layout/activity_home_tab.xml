<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linTabLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="5"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:background="@color/tabColorNormal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tab1"
                    style="@style/tabImageviewStyle"
                    android:src="@drawable/tab_1" />

                <TextView
                    android:id="@+id/txt_tab1"
                    style="@style/tabTxtStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Album" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:background="@color/tabColorNormal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tab2"
                    style="@style/tabImageviewStyle"
                    android:src="@drawable/tab_2" />

                <TextView
                    android:id="@+id/txt_tab2"
                    style="@style/tabTxtStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="New Album" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:background="@color/tabColorNormal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tab3"
                    style="@style/tabImageviewStyle"
                    android:src="@drawable/tab_3" />

                <TextView
                    android:id="@+id/txt_tab3"
                    style="@style/tabTxtStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Home" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tab4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:background="@color/tabColorNormal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tab4"
                    style="@style/tabImageviewStyle"
                    android:src="@drawable/tab_4" />

                <TextView
                    android:id="@+id/txt_tab4"
                    style="@style/tabTxtStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Favs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tab5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:background="@color/tabColorNormal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_tab5"
                    style="@style/tabImageviewStyle"
                    android:src="@drawable/tab_5" />

                <TextView
                    android:id="@+id/txt_tab5"
                    style="@style/tabTxtStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Settings" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
