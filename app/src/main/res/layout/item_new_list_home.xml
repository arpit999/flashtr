        <ImageView
            android:id="@+id/iv_imo6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:src="@drawable/like6" />

    </LinearLayout>


    <LinearLayout
